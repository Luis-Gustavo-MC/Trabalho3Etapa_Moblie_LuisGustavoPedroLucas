<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etActivityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome da Atividade" />

    <EditText
        android:id="@+id/etActivityDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição da Atividade" />

    <EditText
        android:id="@+id/etActivitySchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Horário da Atividade" />

    <EditText
        android:id="@+id/etActivityLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Local da Atividade" />

    <Button
        android:id="@+id/btnAddActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar Atividade" />
</LinearLayout>
